# AG&P Attendance System - Environment Variables
# Copy this file to .env.local for local development
# Add these variables to your Vercel project settings for production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Application Configuration
NEXT_PUBLIC_APP_NAME=AG&P Attendance System
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# Security Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=28800000
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Feature Flags
NEXT_PUBLIC_ENABLE_BIOMETRIC=false
NEXT_PUBLIC_ENABLE_BARCODE=true
NEXT_PUBLIC_ENABLE_MANUAL_ENTRY=true
NEXT_PUBLIC_ENABLE_REPORTS=true

# Database Configuration
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_AUTO_SYNC=true
NEXT_PUBLIC_SYNC_INTERVAL=300000

# UI Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_COMPANY_NAME=AG&P
NEXT_PUBLIC_COMPANY_LOGO=/assets/images/AGP-Logo.png
