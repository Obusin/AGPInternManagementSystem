# AG&P Attendance System - Environment Variables
# Copy this file to .env.local for local development
# Add these variables to your Vercel project settings for production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Application Configuration
NEXT_PUBLIC_APP_NAME=AG&P Attendance System
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# Security Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=28800000
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Feature Flags
NEXT_PUBLIC_ENABLE_BIOMETRIC=false
NEXT_PUBLIC_ENABLE_QR_CODES=true
NEXT_PUBLIC_ENABLE_BARCODE=true
NEXT_PUBLIC_ENABLE_MANUAL_ENTRY=true
NEXT_PUBLIC_ENABLE_REPORTS=true

# QR Code Configuration
NEXT_PUBLIC_QR_CODE_EXPIRY_DAYS=365
NEXT_PUBLIC_QR_CODE_SIZE=256
NEXT_PUBLIC_QR_CODE_ERROR_CORRECTION=M

# Camera Configuration
NEXT_PUBLIC_CAMERA_SCAN_INTERVAL=100
NEXT_PUBLIC_CAMERA_TIMEOUT=60000
NEXT_PUBLIC_CAMERA_DEBOUNCE_TIME=2000
